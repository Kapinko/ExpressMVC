<?xml version="1.0" encoding="UTF-8"?>

<config>
	<test>true</test>
	<application>
		<path>/Library/WebServer/playersync/ExpressMVC/example</path>
		<controller>
			<path>/Library/WebServer/playersync/ExpressMVC/example/controllers</path>
		</controller>
		<library>
			<path>/Library/WebServer/playersync/ExpressMVC/lib</path>
		</library>
		<plugin>
			<path>/Library/WebServer/playersync/ExpressMVC/lib/plugins</path>
		</plugin>
		<listen>8080</listen>
		<debug>true</debug>
	</application>
	<database>
		<host>127.0.0.1</host>
		<user>root</user>
		<password></password>
		<name>psync4</name>
	</database>
	<log>
		<file>/var/log/example.expressmvc.local</file>
		<!-- Can be one of:
			EMERGENCY, ALERT, CRITICAL, ERROR, WARNING, NOTICE, INFO or DEBUG 
		-->
		<level>DEBUG</level>
	</log>
</config>